void mainImage( out vec4 fragColor, in vec2 fragCoord )
{
	vec2 uv = fragCoord.xy / vec2( iResolution.x, iResolution.y);
	float a = texture2D(iChannel0, uv).a;
	fragColor = vec4(a);
}
